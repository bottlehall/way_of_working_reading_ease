#!/opt/homebrew/opt/ruby/bin/ruby

require 'odyssey'
require_relative '../src/fkre.rb'
require "thor"

class Fkre < Thor
  desc "index FILES", "Calculate the worst Flesch-Kincaid Grade Level for the supplied files"
  def index(*filepaths)
    FleschKincaid.new(filepaths)
  end
end

Fkre.start(ARGV)
